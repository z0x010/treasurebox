lb config noauto \
    --apt-indices false \
    --apt-recommends true \
    --archives live.debian.net \
    --archive-areas main \
    --bootappend-live "boot=live hostname=treasurebox live-config persistence noeject quickreboot" \
    --clean \
    --distribution wheezy \
    --iso-application "Treasure Box" \
    --iso-publisher "Marc Sibson" \
    --mode debian \
    --source false \
    "$@"
