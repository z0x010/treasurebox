    --apt-indices false \
    --apt-recommends false \
    --archive-areas main \
    --bootappend-live "boot=live hostname=treasurebox config persistence" \
    --debootstrap-options "--variant=minbase" \
    --clean \
    --distribution wheezy \
    --iso-application "Treasure Box" \
    --iso-publisher "Marc Sibson" \
    --mode debian \
    --source false \
    "$@"
