set -e

if [ ! -e /usr/bin/grep-aptavail ]
then
	echo "E: /usr/bin/grep-aptavail: No such file."

	exit 1
fi

if [ -z "${2}" ]
then
	echo "Usage: $(basename ${0}) FIELD VALUE"

	exit 1
fi

_FIELD="${1}"
_VALUE="${2}"

grep-aptavail -n -sPackage -F${_FIELD} ${_VALUE} | sort
